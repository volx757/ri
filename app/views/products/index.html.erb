<%= link_to 'Cart', controller: 'carts', action: 'index' %>

<br>

<% Juice.all.each do |j| %>
    <%= j.name %>
    <%= j.description %>
    <%= image_tag j.image.url(:thumb) %>
    <%= button_to 'Add To Cart', add_to_cart_product_path(j.product_id) %>
<% end %>

<% Cleanse.all.each do |c| %>
    <%= c.name %>
