<div id="login-container">

  <h1>Log in</h1>

  <div class="button" id="hide-login">Hide Me</div>

  <%= form_tag 'login', :remote => true do %>
      <p>
        <%= label_tag :email %><br/>
        <%= text_field_tag :email%>
      </p>

      <p>
        <%= label_tag :password %><br/>
        <%= password_field_tag :password %>
      </p>

      <p class="button"><%= submit_tag 'Log in' %></p>
  <% end %>



</div>
