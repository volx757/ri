<%= stylesheet_link_tag 'landing' %>

<div id="landing-container" class="transition-all">

  <div id="social-container" class="transition-all">
    <div class="icons">
      <a href="http://facebook.com/rijuicefam" target="_blank"><i class="fa fa-facebook-official"></i></a>
      <a href="http://instagram.com/rijuicefam" target="_blank"><i class="fa fa-instagram"></i></a>
      <a href="http://rijuice.tumblr.com" target="_blank"><i class="fa fa-tumblr"></i></a>
      <a href="http://twitter.com/rijuicefam" target="_blank"><i class="fa fa-twitter"></i></a>
      <a href="mailto:info@rijuice.com"><i class="fa fa-envelope-o "></i></a>
      <% if is_mobile? %>
          <a href="tel://1-717-305-0742"><i class="fa fa-phone"></i></a>
      <% else %>
          <a><i class="fa fa-phone"></i>

            <div id="span-sur"><span>717-305-0742</span></div>
          </a>
      <% end %>
    </div>
  </div>

  <div class="slide-container">
    <h2 class="button">Join the Newsletter</h2>

    <div id="signupform">
      <%= form_for @user, url: '/landing',remote: true do |f| %>
          <%= f.text_field :email, :placeholder => 'EMAIL' %>
          <%= f.submit 'SUBMIT', :class => 'button'  %>
      <% end %>

      <div class="success">
        Successfully Signed Up!
      </div>
    </div>


  </div>

  <div class="container welcome">

    <div class="wrapper">
      <%= image_tag 'header_logo@2x.png' %>
      <h1 style="font-size: 3em;">RIJUICE</h1>

      <h3>Life begins from within.</h3>
    </div>


  </div>

  <div id="throwing-fucking-shade"></div>

</div>

<script>
    var clicked = false
    $('#landing-container h2').on('click', function () {
        if (clicked) {
            $('#signupform').removeClass('push-signup-down')
            $(this).removeClass("invert-button");
            clicked = false
        } else {
            $('#signupform').addClass('push-signup-down')
            $(this).addClass("invert-button");
            clicked = true
        }
    })
    contactRequest()

    function contactRequest() {
        $('#new_user').on('submit', function () {

            var email = $('#user_email')

            if (email.val().length < 1) {
                email.attr('placeholder', 'ENTER YOUR EMAIL')
                email.css('color', 'red')
                return false;
            }


            $(this).fadeOut(500, function () {
                $('.success').fadeIn();
                $('#landing-container h2').on('click', function () {
                    $('#signupform').removeClass('push-signup-down')
                    $(this).removeClass("invert-button");
                    $(this).off()

                })

                setTimeout(function(){
                    $('#signupform').removeClass('push-signup-down')
                    $(this).removeClass("invert-button");
                    $('#landing-container h2').off()
                }, 2000)
            });

        })
    }

</script>