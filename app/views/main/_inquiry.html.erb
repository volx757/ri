<%= form_tag("/inquiry", method: "post", :id => 'inquiry_form', :remote => true) do %>
    <div class="line one">
      <div class="unit one">
        <%= label_tag :name %>
        <%= text_field_tag :name, nil %>
      </div>

      <div class="unit two">
        <%= label_tag :email %>
        <%= email_field_tag :email, nil %>
      </div>
    </div>

    <div class="line two">
      <div class="unit three">
        <%= label_tag :your_question %>
        <%= text_area_tag :content, nil, :cols => '106', :rows => '2' %>
      </div>
    </div>

    <%= submit_tag 'Submit Inquiry', :class => 'button' %>
<% end %>

<div class="inquiry-successful">
  <h2>We've received your question!</h2>
</div>

<script>
  $(document).ready(function(){
      if ($(window).width() < 1000) {
          $('textarea').first().attr('rows', 4);
          $('input.button').css('top','80px')
      }

  })



</script>