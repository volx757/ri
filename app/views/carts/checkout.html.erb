<%= javascript_include_tag "https://js.stripe.com/v2/" %>

<%= form_tag cart_path, :id => 'card-details' do %>
    <div class="payment-errors"></div>


    <div>
      <label for="card-number">Card Number:</label>
      <%= text_field_tag :card_number, nil, name: nil, :placeholder => "Card Number", :data => {:stripe => 'number' }%>
    </div>

    <div>
      <label for="card-exp-month">Card Expiry Month:</label>
      <%= text_field_tag :card_exp_month, nil, name: nil, :placeholder => "Card Exp Month", :data => {:stripe => 'exp_month' }%>
    </div>

    <div>
      <label for="card-exp-year">Card Expiry Year:</label>
      <%= text_field_tag :card_exp_year, nil, name: nil, :placeholder => "CardExp Year", :data => {:stripe => 'exp_year' }%>
    </div>

    <div>
      <label for="card-cvc">CVC:</label>
      <%= text_field_tag :card_cvc, nil, name: nil, :placeholder => "Cvc", :data => {:stripe => 'cvc' }%>
    </div>

    <div>
      <label for="payment-type">Payment Type:</label>
      <select id="payment-type" name="payment_type">
        <option value="deposit">$20 Deposit</option>
        <option value="subscription">Monthly subscription, $9.97</option>
      </select>
    </div>

    <div>
      <input type="submit" value="Pay Now"/>
    </div>
<% end %>

