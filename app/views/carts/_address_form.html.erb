<% if current_user.is_guest? %>
    <div class="guest-sign-up push-shit">
      <p>You can continue checkout as a guest, but we recommend you take a moment to sign up so you won't have to enter
        the details every time.</p>
    </div>
<% end %>


<h1>Shipping Info</h1>

<%= form_for @user, :url => {:controller => 'users', :action => 'update_guest'}, remote: true do |f| %>
    <% if @user.errors.any? %>
        <div class="error_messages">
          <h2>Form is invalid</h2>
          <ul>
            <% for message in @user.errors.full_messages %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <p>
      <%= f.label :email %><br />
      <%= f.text_field :email %>
    </p>
    <p>
      <%= f.label :address %><br />
      <%= f.text_field :address %>
    </p>
    <p>
      <%= f.label :address_two %><br />
      <%= f.text_field :address_two %>
    </p>
    <p>
      <%= f.label :city %><br />
      <%= f.text_field :city %>
    </p>
    <p>
      <%= f.label :state %><br />
      <%= f.text_field :state %>
    </p>
    <p>
      <%= f.label :zip %><br />
      <%= f.text_field :zip %>
    </p>
    <p class="button"><%= f.submit 'Continue' %></p>
<% end %>
